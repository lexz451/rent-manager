<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView android:orientation="horizontal"
        android:layout_margin="8dp"
        app:contentPadding="8dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/record_client_name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    tools:text="91013028547"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_marginStart="8dp"
                    android:id="@+id/record_date"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    tools:text="22/12/12"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/ic_date_range_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Space
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnRemove"
                    android:padding="4dp"
                    android:background="@null"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/record_description"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                tools:text="1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>